{
  "version": 2,
  "builds": [
    { 
      "src": "functions/**/*.js", 
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/functions/health",
      "dest": "/functions/health.js"
    },
    {
      "src": "/functions/(.*)",
      "dest": "/functions/index.js"
    },
    { 
      "src": "/(.*)", 
      "dest": "/functions/index.js" 
    }
  ],
  "functions": {
    "functions/*.js": {
      "runtime": "nodejs22.x",
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}