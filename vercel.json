{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/vendor-transfer", "dest": "/api/vendor-transfer.js" },
    { "src": "/api/vendor-transfer-status/(.*)", "dest": "/api/vendor-transfer-status/[merchant_ref_id].js?merchant_ref_id=$1" },
    { "src": "/api/vendor-transfers", "dest": "/api/vendor-transfers.js" },
    { "src": "/api/health", "dest": "/api/health.js" }
  ]
}